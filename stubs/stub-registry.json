    "variable_patterns": {
        "module": {
            "description": "Module name in PascalCase",
            "example": "ProductCatalog",
            "pattern": "^[A-Z][a-zA-Z0-9]*$"
        },
        "name": {
            "description": "Component name in PascalCase",
            "example": "Product",
            "pattern": "^[A-Z][a-zA-Z0-9]*$"
        },
        "nameSnake": {
            "description": "Component name in snake_case",
            "example": "product",
            "pattern": "^[a-z][a-z0-9_]*$"
        },
        "module_snake": {
            "description": "Module name in snake_case",
            "example": "product_catalog",
            "pattern": "^[a-z][a-z0-9_]*$"
        },
        "moduleUpper": {
            "description": "Module name in UPPER_SNAKE_CASE",
            "example": "PRODUCT_CATALOG",
            "pattern": "^[A-Z][A-Z0-9_]*$"
        },
        "aggregate": {
            "description": "Aggregate root name in PascalCase",
            "example": "Product",
            "pattern": "^[A-Z][a-zA-Z0-9]*$"
        },
        "aggregateSnake": {
            "description": "Aggregate root name in snake_case",
            "example": "product",
            "pattern": "^[a-z][a-z0-9_]*$"
        },
        "eventType": {
            "description": "Event type description",
            "example": "created",
            "pattern": "^[a-z][a-z0-9_]*$"
        },
        "table": {
            "description": "Database table name in snake_case",
            "example": "product_catalog_products",
            "pattern": "^[a-z][a-z0-9_]*$"
        }
    }
